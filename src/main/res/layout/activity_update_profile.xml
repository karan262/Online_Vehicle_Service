<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UpdateProfile">

    <ImageView
        android:id="@+id/logo"

        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"

        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/updateName"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/edittextstyle"
        android:hint="Enter Name you want to update"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/updateMobile"
        android:paddingLeft="10dp"
        android:background="@drawable/edittextstyle"
        android:hint="Enter Mobile Number you want to update"
        android:textColorHint="@color/black"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/updateEmail"
        android:background="@drawable/edittextstyle"
        android:hint="Enter Email you want to update"
        android:textColorHint="@color/black"
        android:paddingLeft="10dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="50dp" />


    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="135dp"
        android:background="@drawable/edittextstyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : If you don't want to update a field leave it blank"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="520dp">

    </TextView>


</RelativeLayout>